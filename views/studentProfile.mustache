        <<!-- Student Profile Section -->
        {{#student}}
        <section class="h-100 gradient-custom-2">
            <div class="container py-5">
                <div class="row justify-content-center">
                    <div class="col-lg-9 col-xl-7">
                        <div class="card">
                            <!-- Student Profile content -->
                            <div class="rounded-top text-white d-flex flex-row"
                                 style="background-color: #fcfcfc">
                                <div class="ms-4 mt-5 d-flex flex-column" style="width: 150px;">
                                    <img src="https://placehold.co/150x150"
                                         alt="Student Picture"
                                         class="img-fluid img-thumbnail mt-4 mb-2"
                                         style="width: 150px;
                                                z-index: 1">
                                    <form id="uploadForm" enctype="multipart/form-data">
                                        <input type="file"
                                               name="profilePicture"
                                               id="profilePicture"
                                               accept="image/*"
                                               style="display: none"
                                               onchange="handleFileSelect(this)">
                                        <label for="profilePicture" class="btn btn-outline-dark" style="z-index: 1">Upload Picture</label>
                                    </form>
                                </div>
                                <div class="ms-3" style="margin-top: 130px;">
                                    <h5>{{fullName}}</h5>
                                    <p>{{department}}</p>
                                </div>
                            </div>
                            <div class="card-body p-4 text-black">
                                <div class="mb-3">
                                    <h5>Goals</h5>
                                    <div class="goals-list">
                                        {{#goals}}
                                        <div class="goal-item">
                                            <p>{{this}}</p>
                                            <span class="delete-goal" onclick="deleteGoal('{{this}}')">Delete</span>
                                        </div>
                                    {{/goals}}
                                </div>
                                <div class="mb-3">
                                    <h5 onclick="toggleGoals()" style="cursor: pointer;">Set Your Goals</h5>
                                    <div class="goal-container" id="goalFields">
                                        <form id="goalForm"
                                              action="/students/user/{{user_id}}/setGoals"
                                              method="post">
                                            <div class="mb-3">
                                                <label for="goalInput" class="form-label">Enter Your Goal:</label>
                                                <input type="text" id="goalInput" name="goalInput" class="form-control">
                                            </div>
                                            <div class="date-container mb-3">
                                                <div>
                                                    <label for="startDate" class="form-label">Start Date:</label>
                                                    <input type="text"
                                                           id="startDate"
                                                           name="startDate"
                                                           class="form-control datepicker">
                                                </div>
                                                <div>
                                                    <label for="endDate" class="form-label">End Date:</label>
                                                    <input type="text"
                                                           id="endDate"
                                                           name="endDate"
                                                           class="form-control datepicker">
                                                </div>
                                            </div>
                                            <div class="mb-3">
                                                <label for="goalDescription" class="form-label">Description:</label>
                                                <textarea id="goalDescription" name="goalDescription" class="form-control"></textarea>
                                            </div>
                                            <button type="button"
                                                    id="addGoal"
                                                    onclick="addGoal()"
                                                    class="btn btn-secondary">Add Another Goal</button>
                                            <button type="submit" class="btn btn-primary">Set Goal</button>
                                        </form>
                                    </div>
                                </div>
                            </div>
                        </div>
                    </div>
                </div>
            </div>
        </div>
