<!-- Scripts -->
<script src="https://cdn.jsdelivr.net/npm/bootstrap@5.3.0/dist/js/bootstrap.bundle.min.js"></script>
<script src="https://cdnjs.cloudflare.com/ajax/libs/bootstrap-datepicker/1.9.0/js/bootstrap-datepicker.min.js"></script>
<script>
        // Function to toggle display of goals form
        function toggleGoals() {
            const goalContainer = document.getElementById('goalFields');
            goalContainer.classList.toggle('active');
        }

        // Function to add new goal
        function addGoal() {
            const goalInput = document.getElementById('goalInput').value;
            const goalsList = document.querySelector('.goals-list');
            const goalItem = document.createElement('div');
            goalItem.classList.add('goal-item');
            goalItem.innerHTML = `
                <p>${goalInput}</p>
                <span class="delete-goal" onclick="deleteGoal('${goalInput}')">Delete</span>
            `;
            goalsList.appendChild(goalItem);
        }

        // Function to delete a goal
        function deleteGoal(goal) {
            const goalsList = document.querySelector('.goals-list');
            const goals = Array.from(goalsList.getElementsByClassName('goal-item'));
            const goalToDelete = goals.find(item => item.querySelector('p').textContent === goal);
            if (goalToDelete) {
                goalsList.removeChild(goalToDelete);
                // Perform delete operation from backend here using goal variable
            }
        }

                // Initialize date pickers
        document.addEventListener("DOMContentLoaded", function() {
                const datepickers = document.querySelectorAll('.datepicker');
                datepickers.forEach(datepicker => {
                    new bootstrap-datepicker(datepicker, {
                        format: 'yyyy-mm-dd',
                        autoclose: true
                    });
                });

        });

        function handleFileSelect(input) {
                if (input.files && input.files[0]) {
                    const reader = new FileReader();
                    
                    reader.onload = function(e) {
                        // Display the selected image
                        document.querySelector('.img-thumbnail').src = e.target.result;

                        // Send the file to the backend (you'll need AJAX or a form submit for this)
                        const file = input.files[0];
                        const formData = new FormData();
                        formData.append('file', file);
                        
                        // AJAX example (replace with your actual backend endpoint)
                        fetch('/upload', {
                            method: 'POST',
                            body: formData
                        })
                        .then(response => {
                            // Handle response from server
                            console.log('File uploaded successfully');
                        })
                        .catch(error => {
                            // Handle error
                            console.error('Error uploading file:', error);
                        });
                    };
                    
                    reader.readAsDataURL(input.files[0]);
                }
        }

</script>
