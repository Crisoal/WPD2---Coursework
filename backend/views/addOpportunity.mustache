          <div class="container">
      <h1>Add New Opportunity</h1>

      <form action="/admin/opportunities/add" method="post" enctype="multipart/form-data">
        <div class="row">
          <div class="form-group col-md-6">
            <label for="category_id">Category:</label>
            <select id="category_id" name="category_id" class="form-control">
                {{#categories}}
                    <option value="{{category_id}}">{{name}}</option>
                {{/categories}}
            </select>
          </div>

          <div class="form-group col-md-6">
                  <label for="title">Title:</label>
                  <input type="text" id="title" name="title" class="form-control">
               </div>
           </div>

           <div class="form-group">
               <label for="description">Description:</label>
               <textarea id="description" name="description" rows="4" class="form-control"></textarea>
           </div>

           <div class="form-group">
               <label for="mentorAvailability">Mentor Availability:</label>
               <div id="mentorContainer"></div>
               <button id="addMentor" type="button" class="btn btn-primary">Add Mentor</button>
           </div>

           <div class="row">
               <div class="form-group col-md-6">
                  <label for="sessionDuration">Session Duration:</label>
                  <input type="text" id="sessionDuration" name="sessionDuration" class="form-control">
               </div>

               <div class="form-group col-md-6">
                  <label for="image">Upload Image:</label>
                  <input type="file" id="image" name="image" class="form-control-file">
               </div>
           </div>

           <div class="form-group">
               <label for="obj">Objectives:</label>
               <textarea id="obj" name="obj" rows="4" class="form-control"></textarea>
           </div>

           <div class="row">
               <div class="form-group col-md-6">
                  <label for="duration">Duration:</label>
                  <input type="text" id="duration" name="duration" class="form-control">
               </div>
           </div>

           <div class="form-group">
               <input type="submit" value="Add Opportunity" class="btn btn-primary">
           </div>
       </form>
   </div>

   <script src="https://code.jquery.com/jquery-3.6.0.min.js"></script>
   <script src="https://cdn.jsdelivr.net/npm/bootstrap@5.2.3/dist/js/bootstrap.bundle.min.js" integrity="sha384-kenU1KFdBIe4zVF0s0G1M5b4hcpxyD9F7jL+jjXkk+Q2h455rYXK/7HAuoJl+0I4" crossorigin="anonymous"></script>
   <script>
       $(document).ready(function() {
           var mentorIndex = 0;

           // Function to add a new set of fields
           function addMentorFields() {
               mentorIndex++;
               var newFields = `
                  <div class="mentor" id="mentor${mentorIndex}">
                      <div class="form-group">
                          <label for="mentorName${mentorIndex}">Mentor Name:</label>
                          <input type="text" id="mentorName${mentorIndex}" name="mentorName${mentorIndex}" class="form-control">
                      </div>
                      <div class="form-group">
                          <label for="recurringDays${mentorIndex}">Recurring Days:</label>
                          <input type="text" id="recurringDays${mentorIndex}" name="recurringDays${mentorIndex}" class="form-control">
                      </div>
                      <div class="form-group">
                          <label for="times${mentorIndex}">Times Available:</label>
                          <input type="text" id="times${mentorIndex}" name="times${mentorIndex}" class="form-control">
                      </div>
                      <button type="button" class="btn btn-danger removeMentor">Remove</button>
                  </div>
               `;
               $('#mentorContainer').append(newFields);
           }

           // Add a set of fields when the button is clicked
           $('#addMentor').click(function() {
               addMentorFields();
           });

           // Remove a set of fields when the remove button is clicked
           $('#mentorContainer').on('click', '.removeMentor', function() {
               $(this).parent().remove();
           });
       });
   </script>

