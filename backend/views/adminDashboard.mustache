<!DOCTYPE html>
<html>
<head>
    <title>Admin Dashboard</title>
    <!-- Include your CSS files here. -->
</head>
<body>
    <h1>Admin Dashboard</h1>
    <h2>Student Records</h2>
    <table>
        <thead>
            <tr>
                <th>ID</th>
                <th>Name</th>
                <th>Email</th>
                <th>Actions</th>
                <!-- Add more columns as needed. -->
            </tr>
        </thead>
        <tbody>
            {{#students}}
            <tr>
                <td>{{id}}</td>
                <td>{{name}}</td>
                <td>{{email}}</td>
                <td>
                    <a href="/admins/students/{{id}}/edit">Edit</a>
                    <a href="/admins/students/{{id}}/delete">Delete</a>
                </td>
                <!-- Add more cells as needed. -->
            </tr>
            {{/students}}
        </tbody>
    </table>
    <h2>Manage Mentors</h2>
    <table>
        <thead>
            <tr>
                <th>ID</th>
                <th>Name</th>
                <th>Email</th>
                <th>Actions</th>
                <!-- Add more columns as needed. -->
            </tr>
        </thead>
        <tbody>
            {{#mentors}}
            <tr>
                <td>{{id}}</td>
                <td>{{name}}</td>
                <td>{{email}}</td>
                <td>
                    <a href="/admins/mentors/{{id}}/edit">Edit</a>
                    <a href="/admins/mentors/{{id}}/delete">Delete</a>
                </td>
                <!-- Add more cells as needed. -->
            </tr>
            {{/mentors}}
        </tbody>
    </table>
    <h2>Manage Opportunities</h2>
    <table>
        <thead>
            <tr>
                <th>ID</th>
                <th>Title</th>
                <th>Description</th>
                <th>Actions</th>
                <!-- Add more columns as needed. -->
            </tr>
        </thead>
        <tbody>
            {{#opportunities}}
            <tr>
                <td>{{id}}</td>
                <td>{{title}}</td>
                <td>{{description}}</td>
                <td>
                    <a href="/admins/opportunities/{{id}}/edit">Edit</a>
                    <a href="/admins/opportunities/{{id}}/delete">Delete</a>
                </td>
                <!-- Add more cells as needed. -->
            </tr>
            {{/opportunities}}
        </tbody>
    </table>
</body>
</html>
