    <!-- Section: Design Block -->
<section class=" text-center text-lg-start">
 <style>
   .rounded-t-5 {
     border-top-left-radius: 0.5rem;
     border-top-right-radius: 0.5rem;
   }

   @media (min-width: 992px) {
     .rounded-tr-lg-0 {
       border-top-right-radius: 0;
     }

     .rounded-bl-lg-5 {
       border-bottom-left-radius: 0.5rem;
     }
   }
 </style>

       <section class="text-center text-lg-start">
               <div class="row g-0 d-flex align-items-center">
               <div class="col-lg-4 col-12">
               <img src="../public/images/pexels-cottonbro-studio-4325476.jpg" alt="Trendy Pants and Shoes" class="w-100 rounded-t-5 rounded-tr-lg-0 rounded-bl-lg-5 img-fluid" />
               </div>
               <div class="col-lg-8 col-12">
               <div class="card-body py-5 px-md-5">
                 <h5> Log In </h5>
                  <form action="/user/login" method="post" class="form-row">
                  {{#error}}
                      <div class="error-message">
                      <p>{{{.}}}</p>
                      </div>
                  {{/error}}
                  <div class="form-floating mb-3 col-md-6">
                      <input type="text" class="form-control" id="usernameOrEmail" name="usernameOrEmail" placeholder="Username or Email">
                      <label for="usernameOrEmail">Username or Email</label>
                  </div>
                  <div class="form-floating col-md-6">
                      <input type="password" class="form-control" id="password" name="password" placeholder="Password">
                      <label for="password">Password</label>
                  </div>
                  <div class="form-floating col-md-12">
                      <button type="submit" class="btn btn-primary btn-lg btn-block">Login</button>
                  </div>
                  </form>
               </div>
               </div>
               </div>
        </section>



</section>

<!-- Section: Design Block -->

