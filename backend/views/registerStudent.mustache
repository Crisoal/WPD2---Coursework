     <div class="wrapper">
        <div class="inner">

                <form action="/user/student-register" method="post">
                     <h3>Student Registration Form</h3>

                     <div class="form-group">
                            <div class="form-wrapper">                                
                                 <label for="fname">Full Name:</label>
                                 <input type="text" id="fname" name="fname" class="form-control" required>
                            </div>
 
                            <div class="form-wrapper">                                
                                 <label for="username">Username:</label>
                                 <input type="text" id="username" name="username" class="form-control" required>
                            </div>
                     </div>

                    <div class="form-wrapper">
                            <label for="studentId">Student ID:</label>
                            <input type="text" id="studentId" name="studentId" pattern="[A-Za-z0-9]+" class="form-control" required>
                    </div>

                     <div class="form-wrapper">
                             <label for="universityName" class="form-label">University/College Name:</label>
                             <input type="text" id="universityName" class="form-control" placeholder="Glasgow Caledonian University" disabled>              
                    </div>

                    <div class="form-wrapper">
                            <label for="academicDepartment" class="form-label">Academic Department/Major:</label>
                                <select id="academicDepartment" class="form-select" required>
                                    <option value="" selected disabled>Select Department/Major</option>
                                    <option value="Computing">Computing</option>
                                    <option value="Engineering">Engineering</option>
                                    <option value="Business Administration">Business Administration</option>
                                    <option value="Social Science">Social Science</option>
                                </select>
                    </div>
        
                     <div class="form-wrapper">
                            <label for="email">Email:</label>
                            <input type="email" id="email" name="email" class="form-control" required>
                    </div>

                    <div class="form-wrapper">
                            <label for="password">Password:</label>
                            <input type="password" id="password" name="password" class="form-control" required>
                    </div>

                    <div class="form-wrapper">
                            <label for="confirmPassword">Confirm Password:</label>
                            <input type="password" id="confirmPassword" name="confirmPassword" class="form-control" required>
                    </div>

                    <div class="checkbox">
                        <label>
                            <input type="checkbox"> I accept the Terms of Use & Privacy Policy.
                            <span class="checkmark"></span>
                        </label>
                    </div>
                
                    <button type="submit">Register Now</button>
                </form>
        </div>
