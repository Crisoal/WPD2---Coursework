<!DOCTYPE html>
<html>
<head>
 <title>Modify Opportunity</title>
 <!-- Include Bootstrap CSS -->
 <link href="https://stackpath.bootstrapcdn.com/bootstrap/5.1.3/css/bootstrap.min.css" rel="stylesheet">
</head>
<body>
 <!-- Create a nav element with nav-tabs class -->
 <nav>
   <ul class="nav nav-tabs">
       <li class="nav-item">
           <a class="nav-link active" id="view-tab" data-bs-toggle="tab" href="#viewOpportunity">View Opportunity</a>
       </li>
       <li class="nav-item">
           <a class="nav-link" id="edit-tab" data-bs-toggle="tab" href="#editOpportunity">Edit Opportunity</a>
       </li>
   </ul>
 </nav>

 <!-- Create tab content -->
 <div class="tab-content">
     <div class="tab-pane fade show active" id="viewOpportunity">
         <!-- View Opportunity content -->
         <h3>View Opportunity</h3>
         {{#opportunities}}
         <h2>{{title}}</h2>
         <ul>
             <li>
               <h3>{{title}}</h3>
               <p>{{description}}</p>
               <p>Date: {{date}}</p>
               <p>Time: {{time}}</p>
             </li>
         </ul>
         {{/opportunities}}
     </div>

     <div class="tab-pane fade" id="editOpportunity">
         <!-- Edit Opportunity content -->
         <h3>Edit Opportunity</h3>
          {{#opportunities}}
          <h5>{{title}}</h5><br>
             <!-- Form fields for modifying opportunity data -->
             <form action="/students/opportunityDetails/{{_id}}/updateOpportunity/{{_id}}" method="post">
             

             <label for="description">{{description}}</label><br>
             <label for="time">Time</label>
             <input type="text" name="time" value="{{time}}"><br>
             <label for="date">Date</label>
             <input type="text" name="date" value="{{date}}">
             <button type="submit">Save</button><br>
         </form>
         {{/opportunities}}
     </div>
 </div>

 <!-- Include Bootstrap JS and its dependencies -->
 <script src="https://code.jquery.com/jquery-3.6.0.min.js"></script>
 <script src="https://stackpath.bootstrapcdn.com/bootstrap/5.1.3/js/bootstrap.bundle.min.js"></script>

 <script>
    // JavaScript to handle tab switching
    $(document).ready(function () {
        $('#view-tab').on('click', function (e) {
            e.preventDefault();
            $('#viewOpportunity').addClass('active show');
            $('#editOpportunity').removeClass('active show');
        });

        $('#edit-tab').on('click', function (e) {
            e.preventDefault();
            $('#editOpportunity').addClass('active show');
            $('#viewOpportunity').removeClass('active show');
        });
    });
 </script>
</body>
</html>
