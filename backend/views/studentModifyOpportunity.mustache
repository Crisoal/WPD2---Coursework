<!DOCTYPE html>
<html>
<head>
  <title>Modify Opportunity</title>
  <!-- Include Bootstrap CSS (You can remove this if you are not using other Bootstrap styles) -->
  
  <link href="https://stackpath.bootstrapcdn.com/bootstrap/5.1.3/css/bootstrap.min.css" rel="stylesheet">
  <script src="https://kit.fontawesome.com/4eb0e146e9.js" crossorigin="anonymous"></script>
  <style>
    .hidden {
      display: none;
    }
  </style>
</head>
<body>
  <h3>View Opportunity</h3>
  <a href="#" id="viewLink">View</a>
  <div id="viewOpportunity">
    {{#opportunities}}
    <h2>{{title}}</h2>
    <ul>
      <li>
        <h3>{{title}}</h3>
        <p>{{description}}</p>
        <p>Date: {{date}}</p>
        <p>Time: {{time}}</p>
      </li>
    </ul>
    {{/opportunities}}
  </div>

  <h3>Edit Opportunity</h3>
  <a href="#" id="editLink">Edit</a>
  <div id="editOpportunity" class="hidden">
    {{#opportunities}}
    <h5>{{title}}</h5><br>
    <!-- Form fields for modifying opportunity data -->
<form action="/students/opportunityDetails/{{_id}}/updateOpportunity/{{_id}}" method="post">
      <label for="description">{{description}}</label><br>
      <label for="time">Time</label>
      <input type="text" name="time" value="{{time}}"><br>
      <label for="date">Date</label>
      <input type="text" name="date" value="{{date}}">
      <button type="submit">Save</button><br>
    </form>
    {{/opportunities}}
  </div>

  <script>
    document.getElementById('viewLink').addEventListener('click', function() {
      document.getElementById('viewOpportunity').classList.remove('hidden');
      document.getElementById('editOpportunity').classList.add('hidden');
    });

    document.getElementById('editLink').addEventListener('click', function() {
      document.getElementById('viewOpportunity').classList.add('hidden');
      document.getElementById('editOpportunity').classList.remove('hidden');
    });
  </script>
</body>
</html>
